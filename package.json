{
  "name": "package-json-manager",
  "displayName": "Package.json Manager",
  "version": "1.0.4",
  "publisher": "icy-r",
  "description": "A comprehensive visual interface for managing and visualizing package.json files within VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/icy-r/package-json-manager.git"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Visualization"
  ],
  "activationEvents": [
    "onCustomEditor:packageJsonManager.packageJsonEditor",
    "onCommand:packageJsonManager.openPackageJsonEditor",
    "onCommand:packageJsonManager.toggleView",
    "onCommand:packageJsonManager.showDependencyGraph"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "packageJsonManager.packageJsonEditor",
        "displayName": "Package.json Visual Editor",
        "selector": [
          {
            "filenamePattern": "**/package.json"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "packageJsonManager.openPackageJsonEditor",
        "title": "Open in Package.json Manager"
      },
      {
        "command": "packageJsonManager.toggleView",
        "title": "Toggle between visual editor and text editor"
      },
      {
        "command": "packageJsonManager.showDependencyGraph",
        "title": "Show Dependency Graph"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "packageJsonManager.openPackageJsonEditor",
          "when": "resourceFilename == 'package.json'"
        },
        {
          "command": "packageJsonManager.toggleView",
          "when": "resourceFilename == 'package.json'"
        },
        {
          "command": "packageJsonManager.showDependencyGraph",
          "when": "resourceFilename == 'package.json'"
        }
      ],
      "editor/title": [
        {
          "command": "packageJsonManager.toggleView",
          "when": "resourceFilename == 'package.json'",
          "group": "navigation"
        },
        {
          "command": "packageJsonManager.showDependencyGraph",
          "when": "resourceFilename == 'package.json'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Package.json Manager",
      "properties": {
        "packageJsonManager.enableAutomaticVisualEditing": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open package.json files in visual editor mode"
        },
        "packageJsonManager.showDependencyGraphButton": {
          "type": "boolean",
          "default": true,
          "description": "Show dependency graph button in editor title bar"
        },
        "packageJsonManager.maxDependencyDepth": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum depth for dependency graph generation"
        },
        "packageJsonManager.defaultViewMode": {
          "type": "string",
          "default": "visual",
          "enum": [
            "visual",
            "text"
          ],
          "enumDescriptions": [
            "Open package.json files in visual editor by default",
            "Open package.json files in text editor by default"
          ],
          "description": "Default view mode for package.json files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "package-extension": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/minimatch": "^6.0.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "vsce": "^2.15.0",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "semver": "^7.3.5"
  },
  "keywords": [
    "package.json",
    "npm",
    "dependency",
    "management",
    "visualization",
    "node",
    "nodejs",
    "package manager",
    "dependencies",
    "devDependencies",
    "npm packages"
  ],
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "author": "icy-r",
  "license": "MIT"
}